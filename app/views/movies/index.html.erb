<p id="notice"><%= notice %></p>
<h1>Listing Movies</h1>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Lengt</th>
      <th>Release dt</th>
      <th>Synopsis</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.name %></td>
        <td><%= movie.lengt %></td>
        <td><%= movie.release_dt %></td>
        <td><%= movie.synopsis %></td>
        <td><%= link_to 'Show', movie, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) , class: "btn btn-primary"%></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
